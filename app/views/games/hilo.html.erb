<div class="mystery">

    <h1>Hi-Lo Game</h1>

    <form action='hilo' method='get'>
        <label for='input'>Guess a number:</label>
        <input type='number' id='input' name='input' min=1 max=100  />
        <input type='submit' value='Submit' />
    </form>

    <p>User input: <%= @user_input %></p>
    <p>Computer num: <%= @cookies %></p>
    <p>Result: <%= @result %></p>
    <p>Counter: <%= cookies[:counter] %></p>

    <br>

    <%= link_to 'Hi-Lo', '/hilo', class: "btn btn-primary"%>

    <%= link_to 'Homepage', '/welcome', class: "btn btn-primary"%>
</div>
